{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "overrides": [
    {
      "files": ["*.md", "*.mdx", "*.astro"],
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": ["*.astro"],
      "options": {
        "parser": "astro"
      }
    }
  ],
  "plugins": ["prettier-plugin-astro"]
}
