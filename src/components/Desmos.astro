---
import { Details } from ".";

interface Props {
  graph: string;
  height?: number;
  width?: number;
  size?: number;
}

let { graph, height, width, size } = Astro.props;

if (!size) {
  size = 300;
}

if (!width) {
  width = size;
}

if (!height) {
  height = size;
}
---

<Details summary="Grafico">
  <iframe
    src={`https://www.desmos.com/calculator/${graph}?embed`}
    style={`width: ${width}px; height: ${height}px;`}
    loading="lazy"
    title={graph}></iframe>
</Details>

<style>
  iframe {
    border: none;
  }
</style>
