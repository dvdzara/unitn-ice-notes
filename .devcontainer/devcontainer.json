{
  "name": "unitn-ice-notes",
  "image": "docker.io/denoland/deno:2.0.2",
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "DavidAnson.vscode-markdownlint",
        "denoland.vscode-deno",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker-italian",
        "streetsidesoftware.code-spell-checker",
        "unifiedjs.vscode-mdx"
      ]
    }
  },
  "postCreateCommand": {
    "install git": "apt-get update && apt-get install --no-install-recommends -y ca-certificates git gpg"
  },
  "postStartCommand": {
    "set git editor": "git config --global core.editor code",
    "deno install": "deno install --allow-scripts"
  }
}
